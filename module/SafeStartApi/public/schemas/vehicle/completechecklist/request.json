{
    "description": "Complete Checklist request",
    "type": "object",
    "properties": {
        "meta": {
            "description": "Request meta",
            "type": "object",
            "properties": {
                "requestId": {
                    "description": "Unique ID of request",
                    "type": "string",
                    "required": false
                }
            }
        },
        "data": {
            "description": "Request data",
            "type": "object",
            "required": true,
            "properties": {
                "fields": {
                    "description": "Fields with data",
                    "type": "array",
                    "required": true,
                    "items": {
                        "description": "Field",
                        "type": "object",
                        "required": true,
                        "properties": {
                            "id": {
                                "description": "Field id",
                                "type": "integer",
                                "required": true
                            },
                            "value": {
                                "description": "Field value",
                                "type": "string",
                                "required": false
                            }
                        }
                    }
                },
                "alerts": {
                    "description": "Alerts",
                    "type": "array",
                    "required": false,
                    "items": {
                        "description": "Field alert",
                        "type": "object",
                        "required": false,
                        "properties": {
                            "fieldId": {
                                "description": "Field ID",
                                "type": "integer",
                                "required": true
                            },
                            "comment": {
                                "description": "Comment",
                                "type": "string",
                                "required": false
                            },
                            "images": {
                                "description": "Photo's",
                                "type": "array",
                                "required": false,
                                "items": {
                                    "description": "Image name (e.g. file_name or file_name.ext)",
                                    "type": "string",
                                    "required": true
                                }
                            }
                        }
                    }
                },
                "gps": {
                    "description": "GPS coords, '%s;%s' -> 'latitude;longitude'",
                    "type": "string",
                    "required": false
                },
                "operator_name": {
                    "description": "Current User Name",
                    "type": "string",
                    "required": false
                },
                "odometer": {
                    "description": "Current Odometer Kms",
                    "type": "integer",
                    "required": false
                },
                "odometer_hours": {
                    "description": "Current Odometer Hours",
                    "type": "integer",
                    "required": false
                }
            }
        }
    }
}